{
    "manifest_version": 2,
    "minimum_chrome_version": "91",
    "name": "Coffecord Web",
    "description": "The caffeinated Discord mod now in your browser",
    "author": "Coffecord",
    "homepage_url": "https://github.com/CoffeCord/CoffeCord",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "dist/Coffecord.js"
            ],
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "dist/Coffecord.js",
        "dist/Coffecord.css"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "coffecord-firefox@coffecord.org",
            "strict_min_version": "128.0"
        }
    }
}
